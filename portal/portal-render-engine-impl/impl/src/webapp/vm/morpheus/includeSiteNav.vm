                    <ul class="mb-0 list-unstyled">
                        #foreach ( $site in $superSites.pinnedSites)
                            #if ($site.id != $currentSiteId)
                                #siteListItem("pin-${velocityCount}", $site, false, false)
                            #end
                        #end
                    </ul>
