                    </svg>
                    <span class="ps-1">${rloader.sitenav_link_allsites}</span>
                </a>
            </div>
        #else
            #if ($superSites.gatewaySite)
                <div class="sites-section">
                    <h3 class="visually-hidden mb-2 pt-3 ps-3 fs-5">${rloader.sitenav_title_current}</h3>
                    <ul class="pt-2 mb-0 list-unstyled">
                        #siteListItem("gateway", $superSites.gatewaySite, true, true)
                    </ul>
                </div>
            #end
        #end
    </nav>
</aside>
